<!DOCTYPE html>
<html lang="es">
<%- include('partials/head'); %>
<body>
	<%- include('partials/navbar'); %>
	
	<!-- Products -->
	<div class="container my-5">
		<ul>
			<% products.forEach(oneProduct => { %>
				<li> 
					<h2><%= oneProduct.name %></h2>
					<p>Precio: <%= oneProduct.price %> </p>
					<p>Marca: <%= oneProduct.brand.name %>  </p> 
					<img src="<%= oneProduct.image %>" width="20%">
					<% if (oneProduct.categories.length > 0) { %>
						<% oneProduct.categories.forEach(category => { %>
							<p>âœ… <i> <%= category.name %> </i></p>
						<% }) %>
					<% } %>
					<br>
					<a class="btn btn-info my-4" href="/products/<%= oneProduct.id %>">VER DETALLE</a>
					<hr>
					<br><br><br><br>
				</li>
			<% }) %>
		</ul>
	</div>
	<!-- Products -->
	
	<%- include('partials/footer'); %>
</body>
</html>